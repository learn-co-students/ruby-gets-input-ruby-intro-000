#!/usr/bin/env ruby

require_relative '../lib/hello_ruby_programmer.rb'

puts "Hi! Welcome to the wonderful world of Ruby programming."
puts "Please enter your name so that we can greet you more personally:"
name = gets.strip
greeting(name)

puts " "
puts "Hi! Welcome to the wonderful world of Ruby programming."
puts "Please enter your name so that we can greet you more personally: gets -v"
name = gets
greeting(name)

puts " "
puts "Hi! Welcome to the wonderful world of Ruby programming."
puts "Please enter your name so that we can greet you more personally: chomp -v"
name = gets.chomp
greeting(name)
